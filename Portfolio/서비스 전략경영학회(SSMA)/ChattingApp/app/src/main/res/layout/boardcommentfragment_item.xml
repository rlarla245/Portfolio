<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/boardcommentfragment_item_Relativelayout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/boardcommentfragment_item_linearlayout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/boardcommenfragment_item_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/academy_logo" />

        <TextView
            android:id="@+id/boardcommenfragment_item_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="이름"
            android:textColor="#000000"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/boardcommentfragment_item_linearlayout_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/boardcommentfragment_item_linearlayout_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/boardcommentfragment_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메시지"
            android:textColor="#000000"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/boardcommentfragment_item_textview_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.05.07"
                android:textColor="@android:color/darker_gray"
                android:textSize="9dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/boardcommentfragment_item_linearLayout2_likeimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/boardcommentfragment_imageview_delete"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/boardcommentfragment_imageview_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/no_star" />

        <TextView
            android:id="@+id/boardcommentfragment_textview_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카운트"
            android:textSize="6dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/boardcommentfragment_imageview_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_centerVertical="true"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</RelativeLayout>