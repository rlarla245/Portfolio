<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.fragment3.SecondActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/second_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        android:background="#ffffff">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/toolbar" />

            </android.support.design.widget.AppBarLayout>

            <FrameLayout
                android:id="@+id/main_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/first_effect"
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginLeft="72dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="112dp"
                        android:background="#ffffff"
                        android:src="@drawable/notification"
                        app:layout_constraintEnd_toStartOf="@+id/second_effect"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/academy_noti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="140dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:text="공지사항"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView22"
                        app:layout_constraintEnd_toEndOf="@+id/first_effect"
                        app:layout_constraintHorizontal_bias="0.272"
                        app:layout_constraintStart_toStartOf="@+id/first_effect"
                        app:layout_constraintTop_toBottomOf="@+id/first_effect"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageView
                        android:id="@+id/second_effect"
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        android:layout_marginEnd="71dp"
                        android:layout_marginRight="71dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:src="@drawable/picture"
                        app:layout_constraintBottom_toBottomOf="@+id/first_effect"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/first_effect"
                        app:layout_constraintTop_toTopOf="@+id/first_effect"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/academy_event_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="학회 소식"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/second_effect"
                        app:layout_constraintStart_toStartOf="@+id/second_effect"
                        app:layout_constraintTop_toBottomOf="@+id/second_effect" />

                    <ImageView
                        android:id="@+id/third_effect"
                        android:layout_width="92dp"
                        android:layout_height="98dp"
                        android:layout_marginEnd="56dp"
                        android:layout_marginLeft="72dp"
                        android:layout_marginRight="56dp"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:src="@drawable/chat"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/first_effect"
                        app:layout_constraintEnd_toStartOf="@+id/fourth_effect"
                        app:layout_constraintHorizontal_bias="0.8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/academy_noti"
                        app:layout_constraintVertical_bias="0.062" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="채팅"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/third_effect"
                        app:layout_constraintHorizontal_bias="0.571"
                        app:layout_constraintStart_toStartOf="@+id/third_effect"
                        app:layout_constraintTop_toBottomOf="@+id/third_effect" />

                    <ImageView
                        android:id="@+id/fourth_effect"
                        android:layout_width="0dp"
                        android:layout_height="92dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="81dp"
                        android:layout_marginRight="81dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:src="@drawable/vote"
                        app:layout_constraintBottom_toBottomOf="@+id/third_effect"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/third_effect"
                        app:layout_constraintTop_toTopOf="@+id/third_effect" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginEnd="260dp"
                        android:layout_marginRight="260dp"
                        android:text="지도교수\n인사말"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toTopOf="@+id/logout_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sixth_effect" />

                    <ImageView
                        android:id="@+id/sixth_effect"
                        android:layout_width="98dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="405dp"
                        android:background="#ffffff"
                        android:src="@drawable/logo"
                        app:layout_constraintBottom_toTopOf="@+id/textView5"
                        app:layout_constraintEnd_toEndOf="@+id/fourth_effect"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/fourth_effect"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="학회 웹사이트"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/sixth_effect"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/sixth_effect"
                        app:layout_constraintTop_toBottomOf="@+id/sixth_effect" />

                    <ImageView
                        android:id="@+id/fifth_effect"
                        android:layout_width="95dp"
                        android:layout_height="76dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="#ffffff"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView5"
                        app:layout_constraintEnd_toEndOf="@+id/third_effect"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/third_effect" />

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="투표"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/fourth_effect"
                        app:layout_constraintHorizontal_bias="0.509"
                        app:layout_constraintStart_toStartOf="@+id/fourth_effect"
                        app:layout_constraintTop_toBottomOf="@+id/fourth_effect" />

                    <Button
                        android:id="@+id/logout_button"
                        android:layout_width="288dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="16dp"
                        android:background="#2b2b2b"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="로그아웃"
                        android:textColor="#ffffff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                </android.support.constraint.ConstraintLayout>

            </FrameLayout>

        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/second_navigationview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/sidebar"
            app:menu="@menu/sidebar_setttings">

            <include layout="@layout/sidebar" />

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

    <LinearLayout
        android:layout_weight="0.7"
        android:background="#d1d1d1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:background="@drawable/press_effect"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/press_effect"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/i_5"
                android:layout_width="40dp"
                android:layout_height="40dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/press_effect"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/i_4"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/press_effect"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/i_2"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/press_effect"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/i_3"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
