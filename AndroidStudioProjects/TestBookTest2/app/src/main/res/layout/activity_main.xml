<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/mainactivity_edittext_number1"
        android:hint="첫 번째 숫자를 입력해주세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/mainactivity_edittext_number2"
        android:hint="두 번째 숫자를 입력해주세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/mainactivity_button_plus"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="더하기"/>

    <Button
        android:id="@+id/mainactivity_button_minus"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="빼기" />

    <Button
        android:id="@+id/mainactivity_button_multiply"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="곱하기" />

    <Button
        android:id="@+id/mainactivity_button_dividing"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="나누기" />

    <Button
        android:id="@+id/mainactivity_button_extranumber"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="나머지 값" />

    <TextView
        android:id="@+id/mainactivity_textview_resultnumber"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="계산 결과"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>