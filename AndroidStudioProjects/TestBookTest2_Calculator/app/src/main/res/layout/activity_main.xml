<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <EditText
        android:id="@+id/mainactivity_edittext_number1"
        android:hint="첫 번째 숫자를 입력해주세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/mainactivity_edittext_number2"
        android:hint="두 번째 숫자를 입력해주세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_onebutton"
            android:text="0"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_twobutton"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_threebutton"
            android:layout_marginLeft="5dp"
            android:text="2"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_fourbutton"
            android:layout_marginLeft="5dp"
            android:text="3"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_fifthbutton"
            android:layout_marginLeft="5dp"
            android:text="4"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_sixbutton"
            android:text="5"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_sevenbutton"
            android:layout_marginLeft="5dp"
            android:text="6"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_eightbutton"
            android:layout_marginLeft="5dp"
            android:text="7"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_ninebutton"
            android:layout_marginLeft="5dp"
            android:text="8"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/mainactivity_button_tenbutton"
            android:layout_marginLeft="5dp"
            android:text="9"
            android:textSize="15dp"
            android:background="#ffcaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/mainactivity_button_plus"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#656363"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="더하기"/>

    <Button
        android:id="@+id/mainactivity_button_minus"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#656363"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="빼기" />

    <Button
        android:id="@+id/mainactivity_button_multiply"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#656363"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="곱하기" />

    <Button
        android:id="@+id/mainactivity_button_dividing"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#656363"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="나누기" />

    <Button
        android:id="@+id/mainactivity_button_extranumber"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="#656363"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="나머지 값" />

    <TextView
        android:id="@+id/mainactivity_textview_resultnumber"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="계산 결과"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>