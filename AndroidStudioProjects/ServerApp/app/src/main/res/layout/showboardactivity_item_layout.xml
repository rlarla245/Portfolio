<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/showboardactivity_item_imageview"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/showboardactivity_item_textview_writername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/showboardactivity_item_imageview"
        android:text="작성자"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/showboardactivity_item_textview_hourtominute"
        android:id="@+id/showboardactivity_item_textview_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showboardactivity_item_textview_writername"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/showboardactivity_item_imageview"
        android:textSize="14dp" />

    <TextView
        android:layout_marginRight="3dp"
        android:layout_marginTop="2dp"
        android:id="@+id/showboardactivity_item_textview_yeartoday"
        android:text="2018.08.07"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="3dp"
        android:textSize="12dp"
        android:layout_below="@+id/showboardactivity_item_textview_yeartoday"
        android:id="@+id/showboardactivity_item_textview_hourtominute"
        android:textColor="#4db4bd"
        android:text="21:39"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:background="#d9d9d9"
        android:layout_below="@+id/showboardactivity_item_textview_comment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp">

    </LinearLayout>


</RelativeLayout>