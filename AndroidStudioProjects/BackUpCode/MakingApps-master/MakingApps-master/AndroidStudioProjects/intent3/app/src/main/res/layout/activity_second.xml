<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.user.intent.SecondActivity">

    <TextView
        android:id="@+id/user_id"
        android:text="홍길동님"
        android:layout_above="@+id/view_text"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_text"
        android:text="로그인 하였습니다."
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_text"
        android:layout_alignStart="@+id/view_text"
        android:layout_below="@+id/view_text"
        android:layout_marginTop="14dp"
        android:text="로그아웃" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/logout_button"
        android:layout_alignBottom="@+id/logout_button"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/logout_button"
        android:layout_toRightOf="@+id/logout_button"
        android:text="사진 찍기" />

</RelativeLayout>
