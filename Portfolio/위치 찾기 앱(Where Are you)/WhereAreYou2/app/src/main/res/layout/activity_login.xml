<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/loginactivity_imageview_locationicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/location_icon" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout9"
        android:layout_width="240dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#000000">

        <EditText
            android:id="@+id/loginactivity_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:textColor="#000000"
            android:textColorHint="#000000" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColorHint="#000000">

        <EditText
            android:id="@+id/loginactivity_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:textColor="#000000"
            android:textColorHint="#000000" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/loginactivity_button_login"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button_style_skyblue"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:foreground="?android:attr/selectableItemBackground"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입을 원하시는 분들은"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/loginactivity_textview_to_signupactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="여기"
            android:textColor="#08b0e9"
            android:textSize="11sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="를 눌러주세요."
            android:textSize="11sp"/>

    </LinearLayout>
</LinearLayout>