<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <Button
        android:background="#000000"
        android:layout_alignParentLeft="true"
        android:text="이전 그림"
        android:textColor="#ffffff"
        android:id="@+id/mainactivity_button_previouspicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/mainactivity_button_previouspicture"
        android:layout_marginLeft="20dp"
        android:hint="현재 숫자"
        android:textColor="#000000"
        android:id="@+id/mainactivity_textview_numberofcurrentpicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/mainactivity_textview_numberofcurrentpicture"
        android:text="/"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/mainacitivty_button_nextpicture"
        android:hint="전체 숫자"
        android:textColor="#000000"
        android:id="@+id/mainactivity_textview_numberofwholepicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="#000000"
        android:text="다음 그림"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_gravity=""
        android:id="@+id/mainacitivty_button_nextpicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- 1. 레이아웃 생성시 새로운 인스턴스 위젯을 입력합니다 -->
    <com.test.testbooktest_sdcardfilereadwrite.myPictureView
        android:layout_margin="10dp"
        android:layout_below="@+id/mainactivity_button_previouspicture"
        android:id="@+id/mainactivity_mypictureview"
        android:layout_width="match_parent"
        android:layout_height="430dp"/>
</RelativeLayout>