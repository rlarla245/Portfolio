<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.user.intent.SecondActivity">

    <TextView
        android:id="@+id/text_id"
        android:text="홍길동님"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/second_textview"
        android:layout_below="@+id/text_id"
        android:text="다음화면입니다."
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/logout_button"
        android:text="로그아웃"
        android:layout_below="@+id/second_textview"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/logout_button"
        android:layout_alignBottom="@+id/logout_button"
        android:layout_toEndOf="@+id/second_textview"
        android:layout_toRightOf="@+id/second_textview"
        android:text="사진 찍기" />
</RelativeLayout>
