<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/message_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="메시지를 입력하세요..." />

    <Button
        android:id="@+id/mainactivity_toast_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글자 나타내기" />

    <Button
        android:id="@+id/mainactivity_url_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홈페이지 열기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/mainactivity_nuga_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누가" />

            <RadioButton
                android:id="@+id/mainactivity_oreo_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오레오" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mainactivity_change_imageview"
            android:layout_width="300dp"
            android:layout_height="300dp" />

    </LinearLayout>

</LinearLayout>