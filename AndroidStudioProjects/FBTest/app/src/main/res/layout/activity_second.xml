<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <FrameLayout
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:id="@+id/mainactivity_framgelayout"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/mainactivity_textview_hellomessage"
            android:layout_gravity="center"
            android:text="rlarla3506@gmail.com님 반갑습니다!"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="10dp"
            android:text="로그아웃"
            android:textSize="14dp"
            android:textColor="#000000"
            android:id="@+id/secondactivity_button_logoutbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="다음 화면"
            android:textSize="14dp"
            android:textColor="#000000"
            android:id="@+id/secondactivity_button_newxtFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>